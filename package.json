{
  "name": "create-astro-theme",
  "version": "0.3.0",
  "description": "CLI tool for creating Astro themes with best practices and modern development setup",
  "type": "module",
  "packageManager": "pnpm@8.12.0",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "create-astro-theme": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./cli": {
      "types": "./dist/cli.d.ts",
      "default": "./dist/cli.js"
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "jest",
    "check-imports": "tsx scripts/check-imports.ts",
    "lint": "biome check . --write && pnpm check-imports",
    "prepublishOnly": "pnpm build",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "astro",
    "create-astro-theme",
    "cli"
  ],
  "author": "Yuhanawa",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Yuhanawa/create-astro-theme"
  },
  "bugs": "https://github.com/Yuhanawa/create-astro-theme/issues",
  "homepage": "https://github.com/Yuhanawa/create-astro-theme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@clack/prompts": "^0.8.2",
    "cac": "^6.7.14",
    "chalk": "^5.3.0",
    "yaml": "^2.6.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@changesets/cli": "^2.27.10",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
