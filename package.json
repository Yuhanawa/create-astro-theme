{
	"name": "create-astro-theme",
	"version": "1.0.4",
	"description": "A CLI tool for creating or using themes using `astro-theme-provider`",
	"type": "module",
	"license": "MIT",
	"homepage": "https://github.com/Yuhanawa/create-astro-theme",
	"bugs": {
		"url": "https://github.com/Yuhanawa/create-astro-theme/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Yuhanawa/create-astro-theme"
	},
	"keywords": [
		"astro",
		"create-astro-theme",
		"cli"
	],
	"author": "Yuhanawa",
	"files": [
		"dist",
		"templates"
	],
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		},
		"./package.json": "./package.json"
	},
	"bin": {
		"create-astro-theme": "./dist/index.js"
	},
	"packageManager": "pnpm@10.7.0",
	"publishConfig": {
		"access": "public"
	},
	"scripts": {
		"build": "tsdown",
		"dev": "tsdown --watch",
		"test": "vitest run",
		"check": "biome check . --write && tsc --noEmit",
		"typecheck": "tsc --noEmit",
		"release": "release-it"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.4",
		"@release-it/conventional-changelog": "^10.0.1",
		"@types/fs-extra": "^11.0.4",
		"@types/node": "^22.15.17",
		"@vitest/coverage-v8": "3.2.4",
		"bumpp": "^10.1.0",
		"memfs": "^4.49.0",
		"release-it": "^19.0.5",
		"release-it-pnpm": "^4.6.6",
		"tsdown": "^0.11.9",
		"typescript": "^5.8.3",
		"vitest": "^3.1.3"
	},
	"dependencies": {
		"@clack/prompts": "^0.11.0",
		"change-case": "^5.4.4",
		"commander": "^14.0.1",
		"fast-glob": "^3.3.3",
		"find-up": "^8.0.0",
		"fs-extra": "^11.3.2",
		"handlebars": "^4.7.8",
		"package-json": "^10.0.1",
		"picocolors": "^1.1.1"
	}
}
