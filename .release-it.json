{
	"$schema": "https://unpkg.com/release-it/schema/release-it.json",
	"plugins": {
		"@release-it/conventional-changelog": {
			"preset": "angular",
			"infile": "CHANGELOG.md"
		},
		"release-it-pnpm": {}
	},
	"git": {
		"commitMessage": "chore: release v${version}",
		"tagName": "v${version}",
		"push": true,
		"requireBranch": "master"
	},
	"hooks": {
		"before:init": ["pnpm run check", "pnpm run test"]
	}
}
